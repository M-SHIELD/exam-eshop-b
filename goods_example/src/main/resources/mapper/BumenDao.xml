<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micah.goods_example.dao.BumenDao">

    <resultMap id="BaseResultMap" type="com.micah.goods_example.entity.Bumen">
        <!--@Table bumen-->
        <result property="bumenid" column="buMenid" jdbcType="INTEGER"/>
        <result property="bumenname" column="buMenName" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          buMenid, buMenName
        from example_goods.bumen
        where buMenid = #{bumenid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          buMenid, buMenName
        from example_goods.bumen
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          buMenid, buMenName
        from example_goods.bumen
        <where>
            <if test="bumenid != null">
                and buMenid = #{bumenid}
            </if>
            <if test="bumenname != null and bumenname != ''">
                and buMenName = #{bumenname}
            </if>
        </where>
    </select>
<!--通过实体作为筛选条件查询-->
    <select id="queryOne" resultMap="BaseResultMap">
        select
          buMenid, buMenName
        from example_goods.bumen
        <where>
            <if test="bumenid != null">
                and buMenid = #{bumenid}
            </if>
            <if test="bumenname != null and bumenname != ''">
                and buMenName = #{bumenname}
            </if>
        </where>
        limit 0,1
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="bumenid" useGeneratedKeys="true">
        insert into example_goods.bumen(buMenName)
        values (#{bumenname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update example_goods.bumen
        <set>
            <if test="bumenname != null and bumenname != ''">
                buMenName = #{bumenname},
            </if>
        </set>
        where buMenid = #{bumenid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from example_goods.bumen where buMenid = #{bumenid}
    </delete>

</mapper>