<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micah.goods_example.dao.CategoryDao">

    <resultMap id="BaseResultMap" type="com.micah.goods_example.entity.dao.Category">
        <!--@Table category-->
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="cname" column="cname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          cid, cname
        from example_goods.category
        where cid = #{cid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          cid, cname
        from example_goods.category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          cid, cname
        from example_goods.category
        <where>
            <if test="cid != null">
                and cid = #{cid}
            </if>
            <if test="cname != null and cname != ''">
                and cname = #{cname}
            </if>
        </where>
    </select>
<!--通过实体作为筛选条件查询-->
    <select id="queryOne" resultMap="BaseResultMap">
        select
          cid, cname
        from example_goods.category
        <where>
            <if test="cid != null">
                and cid = #{cid}
            </if>
            <if test="cname != null and cname != ''">
                and cname = #{cname}
            </if>
        </where>
        limit 0,1
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="cid" useGeneratedKeys="true">
        insert into example_goods.category(cname)
        values (#{cname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update example_goods.category
        <set>
            <if test="cname != null and cname != ''">
                cname = #{cname},
            </if>
        </set>
        where cid = #{cid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from example_goods.category where cid = #{cid}
    </delete>

</mapper>
