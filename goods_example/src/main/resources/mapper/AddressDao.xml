<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micah.goods_example.dao.AddressDao">

    <resultMap id="BaseResultMap" type="com.micah.goods_example.entity.Address">
        <!--@Table address-->
        <result property="地址id" column="地址ID" jdbcType="INTEGER"/>
        <result property="地址" column="地址" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          地址ID, 地址
        from example_goods.address
        where 地址ID = #{地址id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          地址ID, 地址
        from example_goods.address
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          地址ID, 地址
        from example_goods.address
        <where>
            <if test="地址id != null">
                and 地址ID = #{地址id}
            </if>
            <if test="地址 != null and 地址 != ''">
                and 地址 = #{地址}
            </if>
        </where>
    </select>
<!--通过实体作为筛选条件查询-->
    <select id="queryOne" resultMap="BaseResultMap">
        select
          地址ID, 地址
        from example_goods.address
        <where>
            <if test="地址id != null">
                and 地址ID = #{地址id}
            </if>
            <if test="地址 != null and 地址 != ''">
                and 地址 = #{地址}
            </if>
        </where>
        limit 0,1
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="地址id" useGeneratedKeys="true">
        insert into example_goods.address(地址)
        values (#{地址})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update example_goods.address
        <set>
            <if test="地址 != null and 地址 != ''">
                地址 = #{地址},
            </if>
        </set>
        where 地址ID = #{地址id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from example_goods.address where 地址ID = #{地址id}
    </delete>

</mapper>